<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#000000"
    tools:context=".GameOver" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showCurrent"
        android:textColor="@color/orange"
        android:textSize="40sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showHigh"
        android:layout_below="@id/showCurrent"
        android:textColor="@color/white"
        android:textSize="40sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newHigh"
        android:layout_below="@id/showHigh"
        android:textColor="@color/red"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_over"
        android:textColor="@color/green"
        android:textSize="80sp"
        android:id="@+id/gameOver"
        android:layout_marginTop="24dp"
        android:shadowDx="-15"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:shadowColor="@color/dark_green"
        android:layout_marginEnd="53dp"
        android:layout_below="@+id/newHigh"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>